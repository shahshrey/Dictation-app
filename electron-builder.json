{
  "appId": "com.whisper.dictation",
  "productName": "Whisper Dictation",
  "directories": {
    "output": "dist",
    "buildResources": "resources"
  },
  "files": [
    "src/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "mac": {
    "category": "public.app-category.productivity",
    "target": "dmg",
    "icon": "resources/icons/icon.icns",
    "darkModeSupport": true
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "win": {
    "target": "nsis",
    "icon": "resources/icons/icon.ico"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "category": "Utility"
  },
  "extraResources": [
    {
      "from": "src/python",
      "to": "python",
      "filter": ["**/*"]
    }
  ]
} 