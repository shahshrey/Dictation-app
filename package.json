{
  "name": "dictation-app",
  "version": "1.0.0",
  "description": "A dictation app using Electron and Groq API",
  "main": "dist/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron-forge start",
    "clean": "rm -rf dist .webpack out src/**/*.js src/**/*.js.map src/**/*.css.map",
    "package": "npm run build && electron-forge package",
    "make": "npm run build && electron-forge make",
    "publish": "npm run build && electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "build": "node compile.js",
    "start:dev": "npm run build && npm start",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "commitlint": "commitlint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:all": "pnpm test:unit && pnpm test:integration:mock && pnpm test:integration:spectron",
    "test:unit": "jest --selectProjects=unit --testMatch='**/tests/unit/**/*.test.ts'",
    "test:integration": "jest --selectProjects=integration --testMatch='**/tests/integration/**/*.test.ts'",
    "test:integration:mock": "jest --selectProjects=integration --testMatch='**/tests/integration/app.mock.test.ts'",
    "test:integration:ipc": "jest --selectProjects=integration --testMatch='**/tests/integration/ipc-communication.test.ts'",
    "test:integration:spectron": "jest --selectProjects=integration --testMatch='**/tests/integration/ipc-communication.test.ts' --testNamePattern='Real IPC Communication with Spectron'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:fix-linter-errors": "eslint --fix --ext .ts,.tsx tests/",
    "test:prepare-spectron": "node scripts/prepare-spectron-tests.js"
  },
  "keywords": [
    "dictation",
    "electron",
    "groq",
    "transcription"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.26.0",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@electron-forge/cli": "^7.7.0",
    "@electron-forge/maker-deb": "^7.7.0",
    "@electron-forge/maker-rpm": "^7.7.0",
    "@electron-forge/maker-squirrel": "^7.7.0",
    "@electron-forge/maker-zip": "^7.7.0",
    "@electron-forge/plugin-webpack": "^7.7.0",
    "@playwright/test": "^1.51.0",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "autoprefixer": "10.4.15",
    "babel-jest": "^29.7.0",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "electron": "^28.1.4",
    "electron-mock-ipc": "^0.3.12",
    "electron-playwright-helpers": "^1.7.1",
    "esbuild": "^0.25.1",
    "eslint": "^8.56.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "knip": "^5.45.0",
    "lint-staged": "^15.5.0",
    "lucide-react": "0.479.0",
    "mini-css-extract-plugin": "^2.9.2",
    "path-browserify": "^1.0.1",
    "postcss": "8.4.31",
    "prettier": "^3.5.3",
    "spectron": "19.0.0",
    "tailwindcss": "3.3.3",
    "tailwindcss-animate": "1.0.7",
    "ts-jest": "^29.2.6",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-label": "2.1.2",
    "@radix-ui/react-select": "2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slot": "1.1.2",
    "@radix-ui/react-switch": "1.1.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toggle": "1.1.2",
    "electron-store": "^10.0.1",
    "groq-sdk": "^0.3.2",
    "react": "^19.0.0",
    "react-dom": "19.0.0",
    "tailwind-merge": "3.0.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
